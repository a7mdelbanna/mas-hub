# MAS Business OS - Environment Configuration

# Firebase Configuration
FIREBASE_PROJECT_ID=mashub-a0725
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=mashub-a0725.firebaseapp.com
FIREBASE_DATABASE_URL=https://mashub-a0725-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=mashub-a0725.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Environment
NODE_ENV=development

# Seeding Configuration
SEED_BATCH_SIZE=500
SEED_TIMEOUT=30000
SEED_PARALLEL=false

# Payment Gateway Configuration (Demo/Test Keys)
STRIPE_PUBLIC_KEY=pk_test_demo_key
STRIPE_SECRET_KEY=sk_test_demo_key
PAYMOB_API_KEY=demo_paymob_key
PAYMOB_MERCHANT_ID=demo_merchant

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@mas.business
SMTP_PASSWORD=your_email_password
SMTP_FROM_NAME=MAS Business Solutions

# File Storage
STORAGE_BUCKET=mashub-assets
STORAGE_BASE_URL=https://storage.googleapis.com/mashub-assets

# API Configuration
API_BASE_URL=http://localhost:3000
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key
SESSION_TIMEOUT=1800000

# Feature Flags
ENABLE_MULTI_LANGUAGE=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_FILE_UPLOAD=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/mas-business-os.log

# Database
DB_CONNECTION_POOL_SIZE=10
DB_TIMEOUT=5000

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30