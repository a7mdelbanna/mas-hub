# Staging Environment Configuration
# NOTE: This file contains non-sensitive defaults.
# Actual secrets should be configured in GitHub Secrets and CI/CD environment.

# Environment
NODE_ENV=production
REACT_APP_ENVIRONMENT=staging

# Firebase Configuration
REACT_APP_FIREBASE_PROJECT_ID=mashub-staging-a0725
REACT_APP_FIREBASE_AUTH_DOMAIN=mashub-staging-a0725.firebaseapp.com
REACT_APP_FIREBASE_STORAGE_BUCKET=mashub-staging-a0725.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=placeholder_sender_id
REACT_APP_FIREBASE_APP_ID=placeholder_app_id

# API Keys (use GitHub Secrets for actual values)
REACT_APP_FIREBASE_API_KEY=placeholder_staging_api_key
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_placeholder
REACT_APP_PAYMOB_PUBLIC_KEY=placeholder_paymob_key

# Feature Flags
REACT_APP_ENABLE_DEBUG_LOGGING=true
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_ANALYTICS=true

# Development Tools
GENERATE_SOURCEMAP=false
REACT_APP_DEBUG=false

# External Services
REACT_APP_SENTRY_DSN=placeholder_sentry_dsn
REACT_APP_GA_MEASUREMENT_ID=placeholder_ga_id

# API Configuration
REACT_APP_API_BASE_URL=https://us-central1-mashub-staging-a0725.cloudfunctions.net
REACT_APP_API_TIMEOUT=30000

# Email Configuration (for functions)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false

# Payment Gateway URLs
STRIPE_WEBHOOK_ENDPOINT_SECRET=placeholder_webhook_secret
PAYMOB_WEBHOOK_SECRET=placeholder_paymob_webhook

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Session Configuration
SESSION_TIMEOUT_MINUTES=120
REFRESH_TOKEN_EXPIRY_DAYS=7

# Notification Settings
SLACK_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true

# Backup Configuration
BACKUP_RETENTION_DAYS=60
AUTO_BACKUP_ENABLED=true

# Security Settings
ENABLE_CORS=true
CORS_ORIGINS=https://mashub-staging-a0725.web.app
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
ENABLE_COMPRESSION=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
LOG_LEVEL=info