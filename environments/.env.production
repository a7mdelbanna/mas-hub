# Monitoring (Production - Full Monitoring)
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_UPTIME_MONITORING=true
ENABLE_ALERT_NOTIFICATIONS=true
LOG_LEVEL=warn

# Compliance
